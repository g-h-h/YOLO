@-webkit-keyframes showform {
0% {
    opacity: 0;
    -webkit-transform: translateY(40rpx);
            transform: translateY(40rpx);
}
100% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes showform {
0% {
    opacity: 0;
    -webkit-transform: translateY(40rpx);
            transform: translateY(40rpx);
}
100% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
